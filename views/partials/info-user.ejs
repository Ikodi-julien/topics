<!-- Utiliser en dev pour controler les valeurs des variables lièes à la session -->

<div class="infouser__button__container">
  <div class="infouser__button" id="infouserButton"><i class="fas fa-user-astronaut"></i></div>
</div>

<div class="infouser" id="infouser">

  <% if (typeof info !== 'undefined') {%>

  <p class="infouser__info" id="infoMessage">
    <%= info %>
  </p>
  <% } %>

  <% if (session.data.userInfos !== null) { %>

  <p class="infouser__item">
    id : <span id="infoUserId"><%= session.data.userInfos.id %></span>
  </p>

  <p class="infouser__item">
    Loggued : <%= session.data.logguedIn %>
  </p>

  <p class="infouser__item">
    Pseudo : <%= session.data.userInfos.username %>
  </p>

  <p class="infouser__item">
    Status : <%= session.data.userInfos.role_string %>
  </p>

  <% } else { %>
  <p class="infouser__item">
    Disconnected
  </p>
  <div class="infouser__connexion">Sign in to know more...</div>

  <% } %>
